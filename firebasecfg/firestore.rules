rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: require authentication
    function isAuth() {
      return request.auth != null;
    }

    // Helper: check custom claim "role"
    function hasRole(role) {
      return isAuth() && request.auth.token.role == role;
    }

    // -------------------------------
    // Profiles collection
    // -------------------------------
    match /profiles/{uid} {
      // Each user can read/update their own profile
      allow read, update: if isAuth() && request.auth.uid == uid;

      // Only admins can create profiles for others
      allow create: if hasRole('admin');

      // No one can delete profiles (disable destructive action by default)
      allow delete: if false;
    }

    // -------------------------------
    // Authentication logs
    // -------------------------------
    match /auth_logs/{uid}/events/{logId} {
      // Only admins can read, list, and write audit logs
      allow read, list, write: if hasRole('admin');
    }

    // -------------------------------
    // Example application data
    // -------------------------------
    match /app_data/{document=**} {
      // Staff and admins can read/write
      allow read, write: if hasRole('admin') || hasRole('staff');
    }
  }
}
